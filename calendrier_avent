const decorations = ["ğŸ„","ğŸ","â­","â„ï¸","ğŸ•¯ï¸","ğŸ§¦","ğŸ¦Œ","ğŸ€","ğŸ…","ğŸ§â€â™‚ï¸","ğŸª","ğŸ‚","âœ¨","ğŸŒŸ","ğŸ•¯ï¸","ğŸŒ²"];

const today = 24;
const grid = document.getElementById('grid');
const modal = document.getElementById('modal');
const image = document.getElementById('image');
const close = document.getElementById('close');
const commentContainer = document.getElementById('commentContainer');

// GÃ©nÃ©ration des cases
for (let i = 1; i <= 24; i++) {
  const day = document.createElement('div');
  day.className = 'day';
  day.textContent = i;

  const decoPositions = ['top-left','top-right','bottom-left','bottom-right'];
  decoPositions.forEach(pos=>{
    const deco = document.createElement('div');
    deco.className = 'decoration ' + pos;
    deco.textContent = decorations[Math.floor(Math.random()*decorations.length)];
    day.appendChild(deco);
  });

  const locked = i > today;
  if (locked) day.classList.add('locked');
  day.onclick = () => { if (!locked) openDay(i, day); };
  grid.appendChild(day);
}

function openDay(i, day) {
  if (images[i]) {
    // effet "volet"
    day.classList.add('opened');
    image.src = images[i];
    commentContainer.textContent = comments[i] || "Une belle surprise tâ€™attend...";
    modal.classList.add('open');
  } else {
    alert("Image du jour non trouvÃ©e !");
  }
}

close.onclick = () => modal.classList.remove('open');
modal.onclick = e => { if (e.target === modal) modal.classList.remove('open'); };

// â„ï¸ neige
function createSnowflake() {
  const snowflake = document.createElement('div');
  snowflake.classList.add('snowflake');
  snowflake.textContent = 'â„ï¸';
  snowflake.style.left = Math.random() * 100 + 'vw';
  snowflake.style.fontSize = Math.random() * 10 + 10 + 'px';
  snowflake.style.animationDuration = 5 + Math.random() * 5 + 's';
  document.body.appendChild(snowflake);
  setTimeout(() => snowflake.remove(), 10000);
}
setInterval(createSnowflake, 250);
